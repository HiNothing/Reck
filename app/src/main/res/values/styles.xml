<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Calculator" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primaryContainer</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiaryContainer</item>
        <item name="colorOnTertiary">@color/onTertiary</item>
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Shape definitions for buttons -->
    <style name="ShapeAppearance.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Calculator button styles -->
    <style name="CalcButtonPrimary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent</item>
        <item name="backgroundTint">@color/primaryContainer</item>
        <item name="android:textColor">@color/onPrimaryContainer</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CalcButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent</item>
        <item name="backgroundTint">@color/secondaryContainer</item>
        <item name="android:textColor">@color/onSecondaryContainer</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CalcButtonTertiary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent</item>
        <item name="backgroundTint">@color/tertiaryContainer</item>
        <item name="android:textColor">@color/onTertiaryContainer</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CalcButtonAccent" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Display text appearance -->
    <style name="DisplayText" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">64sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:lineHeight" tools:targetApi="28">72sp</item>
    </style>
</resources>